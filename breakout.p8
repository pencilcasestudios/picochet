__lua__
-- breakout
--
-- this is a breakout clone.
-- i am following the youtube
-- tutorial by @lazydevs.

-- variables
ball_x=50
ball_y=100
ball_deltax=1
ball_deltay=1
ball_radius=2

screen_top=2
screen_bottom=125
screen_left=2
screen_right=125

-- colours
black=0
dark_blue=1
purple=2
yellow=10

function _init()
	cls()
end

function _update()
	ball_x=ball_x+ball_deltax
	ball_y=ball_y+ball_deltay

	if ball_x > screen_right or
		ball_x < screen_left then
		ball_deltax=-ball_deltax
		sfx(0)
	end

	if ball_y > screen_bottom or
		ball_y < screen_top then
		ball_deltay=-ball_deltay
		sfx(0)
	end
end

function _draw()
	cls()
	rectfill(0,0,127,127,purple)
	circfill(
		ball_x,
		ball_y,
		ball_radius,
		yellow
	)
end

