-- intro to the game loop

-- variables
x=0
y=50
speed=1
alive=true
red=8
colour="red"
heart="â™¥"

-- init is called once
-- at the beginning of the game
function _init()
	print("init")
end

-- update gets called every
-- frame
function _update()
	x=x+speed

	-- check for the right edge
	if x > 122 then
		speed=-1
	end
	-- check for the left edge
	if x < 0 then
		speed=1
	end
end

-- draw may or may not be
-- called every frame
function _draw()
	cls()
	print(heart,x,y,red)
end

