__lua__
-- intro to the game loop

-- variables
-- starting position
x=0
y=33

-- starting speed
xspeed=1
yspeed=1

-- colour of the heart
red=8 -- red
white=7 -- white
char_colour=8

-- character to draw
char="â™¥"

-- init is called once
-- at the beginning of the game
function _init()
	print("init")
end

-- update gets called every
-- frame
function _update()
	x=x+xspeed
	y=y+yspeed

	-- check for the right edge
	if x > 122 then
		xspeed=-1
	end

	-- check for the left edge
	if x < 0 then
		xspeed=1
	end

	-- check for the bottom edge
	if y > 122 then
		yspeed=-1
	end

	-- check for the top edge
	if y < 0 then
		yspeed=1
	end
end

-- draw may or may not be
-- called every frame
function _draw()
	cls()
	print(x, white)
	print(y, white)
	print(char,x,y,char_colour)
end

